	<script>
		document.addEventListener('DOMContentLoaded', function() {
			var calendarEl = document.getElementById('calendar');
			var calendar = new FullCalendar.Calendar(calendarEl, {
				initialView: 'dayGridMonth', // Afficher le calendrier en mode mois par défaut
				events: [
					{% for evenement in evenements %}
					{
						title: '{{ evenement.titre }}', // Titre de l'événement
						start: '{{ evenement.dateDebut|date('Y-m-d') }}', // Date de début de l'événement
						end: '{{ evenement.dateFin|date('Y-m-d') }}' // Date de fin de l'événement
					},
					{% endfor %}
				]
			});
			calendar.render();
		});
	</script>


