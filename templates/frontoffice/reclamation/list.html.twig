{% extends 'base_front.html.twig' %}
{% block body %}

	<!-- Start Hero Section -->
	<div class="hero">
		<div class="container">
			<div class="row justify-content-between">
				<div class="col-lg-5">
					<div class="intro-excerpt">
						<h1>Reclamation</h1>
						<p class="mb-4">"Concerned about sustainability? Use our reclamation interface to report any issues or suggest improvements."</p>
						<p>
							<a href="" class="btn btn-secondary me-2">Home</a>
							<a href="#" class="btn btn-white-outline">Explore</a>
						</p>
					</div>
				</div>
				<div class="col-lg-7">
					<div class="hero-img-wrap">
						<img src="{{asset('frontoffice/images/reclam-removebg-preview.png')}}" class="img-fluid">
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Hero Section -->
	<!-- Ajoutez des champs de formulaire pour le filtrage -->


	<!-- Start Contact Form -->
		<div class="untree_co-section"> <div class="container">
			<div class="block">
				<div class="row justify-content-center">
					<div class="col-md-8 col-lg-12 pb-4">
						<div
							class="container">


							{# code jedid men aand zeineb  #}

							{% for flashMessage in app.flashes('success') %}
								<div id="flash-message" class="alert alert-success" role="alert">
									{{ flashMessage.message }}
								</div>

								<script>
									// Supprimer le message flash apr s le d lai sp cifi
setTimeout(function () {
var flashMessage = document.getElementById('flash-message');
if (flashMessage) {
flashMessage.remove();
}
}, {{ flashMessage.timeout ?? 8000 }}); // Utilisez 5000 ms (5 secondes) comme d lai par d faut
								</script>

							{% endfor %}


							<h2>List of Reclamations</h2>
							


                          
<!-- Votre contenu HTML pour afficher les réclamations avec les options de recherche et de filtrage -->
<div class="container my-4">
    <form action="{{ path('app_list', {'reclamateur_id': reclamateur_id}) }}" method="get" class="row g-3 align-items-center">
        <!-- Champs de formulaire pour la recherche -->
        <div class="col-auto">
            <label for="date" class="col-form-label">Search by Date:</label>
            <input type="date" id="date" name="date" class="form-control">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Search</button>
        </div>

        <!-- Champs de formulaire pour le filtrage -->
        <div class="col-auto">
            <label for="statut" class="col-form-label">Filter by Status:</label>
            <select name="statut" class="form-select">
                <option value="">All</option>
                <option value="Resolved">Resolved</option>
                <option value="Sent successfully">Sent successfully</option>
                <!-- Ajoutez d'autres options de statut si nécessaire -->
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Filter</button>
        </div>
    </form>
</div>


							<div class="table-responsive">
								<table class="table complaint-table">
									<thead>
										<tr>
											<th>ID</th>
											<th>Type</th>
											<th>Description</th>
											<th>Statut</th>
											<th>Date</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										{% if reclamations is empty %}

											<div>
												no reclamation is here</div>
										{% else %}
											{% for reclamation in reclamations %}
												<tr>
													<td>{{ reclamation.id }}</td>
													<td>{{ reclamation.type }}</td>
													<td>{{ reclamation.DescriptionReclamation }}</td>
													<td>{{ reclamation.StatutReclamation }}</td>
													<td>{{ reclamation.getDateReclamation()|date('d-m-Y')}}</td>
													<td>
														<div class="card-footer text-center">
															<td>
																{% if reclamation.getDateReclamation() >= currentTime|date_modify('-2 hours') %}
																	<a href="{{ path('app_edit', {'id': reclamation.id, 'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-primary btn-sm">Edit</a>
																{% endif %}
															</td>
															<td>
																<a href="{{ path('app_reclamation_show', {'id': reclamation.id, 'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-secondary btn-sm">Show</a>
															</td>
															<td>
																{% if reclamation.getDateReclamation() >= currentTime|date_modify('-2 hours') %}
																	<a href="{{ path('app_delete_reclamation', {'reclamateur_id': reclamation.getReclamateur().id,'id': reclamation.id}) }}" class="btn btn-danger btn-sm">Delete</a>
																{% endif %}
															</td>
															<td>
																{% if reclamation.getReponse() is not null %}
																	<a href="{{ path('app_reponse_show', {'id': reclamation.getReponse().id,'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-info btn-sm">Show Response</a>
																{% endif %}
															</td>
														</div>
													</td>
												</tr>


											{% endfor %}
										{% endif %}

									</tbody>
								</table>

							</tbody>
						</div>
						<a href="{{ path('app_reclamation', {'reclamateur_id': reclamateur_id}) }}" class="btn btn-secondary">Back to Reclamation Form</a>

						<!-- End Contact Form -->
					</div>
				</div>
			</div>


		</div>


		   {#start Pagination#}
             <div class="d-flex justify-content-center">
             {% do reclamations.setPageRange(2) %}
             {{knp_pagination_render(reclamations,'frontoffice/reclamation/pagination.html.twig')}}
             </div>
			{#end Pagination#}

	</div>
</div>
<!-- End Contact Form -->{% endblock %}

