{% extends 'base_front.html.twig' %}
{% block body %}

 <!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1>Reclamation</h1>
								<p class="mb-4">"Concerned about sustainability? Use our reclamation interface to report any issues or suggest improvements."</p>
								<p><a href="" class="btn btn-secondary me-2">Home</a><a href="#" class="btn btn-white-outline">Explore</a></p>
							</div>
						</div>
						<div class="col-lg-7">
							<div class="hero-img-wrap">
								<img src="{{asset('frontoffice/images/reclam-removebg-preview.png')}}" class="img-fluid">
							</div>
						</div>
					</div>
				</div>
			</div>
		<!-- End Hero Section -->

	  

    <!-- Start Contact Form -->
<div class="untree_co-section">
    <div class="container">
        <div class="block">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-8 pb-4">
                    <div class="container">
                        <h2>List of Reclamations</h2>
                        <div class="table-responsive">
                            <table class="table complaint-table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Type</th>
                                        <th>Description</th>
                                        <th>Statut</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reclamation in reclamations %}
                                        <tr>
                                            <td>{{ reclamation.getId() }}</td>
                                            <td>{{ reclamation.getType() }}</td>
                                            <td>{{ reclamation.getDescriptionReclamation() }}</td>
                                            <td>{{ reclamation.getStatutReclamation() }}</td>
                                            <td>{{ reclamation.getDateReclamation()|date('Y-m-d H:i:s')}}</td>
                                            <td>
                                                <div class="card-footer text-center"> 
                                                    {% if reclamation.getDateReclamation() >= currentTime|date_modify('-2 hours') %}
                                                        <a href="{{ path('app_edit', {'id': reclamation.id, 'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-secondary">Edit</a>
                                                    {% endif %}
                                                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id, 'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-secondary">show</a>
                                                     {% if reclamation.getDateReclamation() >= currentTime|date_modify('-2 hours') %}

                                                    <a href="{{ path('app_delete_reclamation', {'reclamateur_id': reclamation.getReclamateur().id,'id': reclamation.id}) }}" class="btn btn-danger btn-sm">Delete</a> 
                                                    {% endif %}
                                                    {% if reclamation.getReponse() is not null %}
                                                        <a href="{{ path('app_reponse_show', {'id': reclamation.getReponse().id}) }}" class="btn btn-info btn-sm">Show Response</a>
                                                    {% endif %}
                                                </div> 
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <a href="{{ path('app_reclamation', {'reclamateur_id': reclamateur_id}) }}" class="btn btn-secondary">Back to Reclamation Form</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Contact Form -->

  <!-- End Contact Form -->

{% endblock %}