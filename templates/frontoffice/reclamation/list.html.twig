{% extends 'base_front.html.twig' %}
{% block body %}

	<!-- Start Hero Section -->
	<div class="hero">
		<div class="container">
			<div class="row justify-content-between">
				<div class="col-lg-5">
					<div class="intro-excerpt">
						<h1>Reclamation</h1>
						<p class="mb-4">"Concerned about sustainability? Use our reclamation interface to report any issues or suggest improvements."</p>
						<p>
							<a href="" class="btn btn-secondary me-2">Home</a>
							<a href="#" class="btn btn-white-outline">Explore</a>
						</p>
					</div>
				</div>
				<div class="col-lg-7">
					<div class="hero-img-wrap">
						<img src="{{asset('frontoffice/images/reclam-removebg-preview.png')}}" class="img-fluid">
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Hero Section -->
<!-- Ajoutez des champs de formulaire pour le filtrage -->

 

	<!-- Start Contact Form -->
	<div class="untree_co-section">
		<div class="container">
			<div class="block">
				<div class="row justify-content-center">
					<div class="col-md-8 col-lg-12 pb-4">
						<div class="container">
							<h2>List of Reclamations</h2>





		<form action="{{ path('app_list', {'reclamateur_id': user.id}) }}" method="get" class="mb-4">
    <div class="form-row">
        <!-- Champ de filtrage par type -->
        <div class="col-md-3 mb-2">
            <select name="type" class="form-control">
                <option value="">All</option>
                <option value="Type1" {% if app.request.query.get('type') == 'Type1' %}selected{% endif %}>arnaque</option>
                <option value="Type2" {% if app.request.query.get('type') == 'Type2' %}selected{% endif %}>conflit</option>
                <!-- Ajouter d'autres options de type si nécessaire -->
            </select>
        </div>

        <!-- Champ de filtrage par statut -->
        <div class="col-md-3 mb-2">
            <select name="statut" class="form-control">
                <option value="">All</option>
                <option value="Resolved" {% if app.request.query.get('statut') == 'Resolved' %}selected{% endif %}>Resolved</option>
                <option value="Sent successfully" {% if app.request.query.get('statut') == 'Sent successfully' %}selected{% endif %}>Sent successfully</option>
                <!-- Ajouter d'autres options de statut si nécessaire -->
            </select>
        </div>

        <!-- Bouton de soumission -->
        <div class="col-md-2 mb-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

							<div class="table-responsive">
								<table class="table complaint-table">
									<thead>
										<tr>
											<th>ID</th>
											<th>Type</th>
											<th>Description</th>
											<th>Statut</th>
											<th>Date</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for reclamation in reclamations %}
											<tr>
												<td>{{ reclamation.id }}</td>
												<td>{{ reclamation.type }}</td>
												<td>{{ reclamation.DescriptionReclamation }}</td>
												<td>{{ reclamation.StatutReclamation }}</td>
												<td>{{ reclamation.getDateReclamation()|date('Y-m-d H:i:s')}}</td>
												<td>
													<div class="card-footer text-center">
														<td>
															{% if reclamation.getDateReclamation() >= currentTime|date_modify('-2 hours') %}
																<a href="{{ path('app_edit', {'id': reclamation.id, 'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-primary btn-sm">Edit</a>
															{% endif %}
														</td>
														<td>
															<a href="{{ path('app_reclamation_show', {'id': reclamation.id, 'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-secondary btn-sm">Show</a>
														</td>
														<td>
															{% if reclamation.getDateReclamation() >= currentTime|date_modify('-2 hours') %}
																<a href="{{ path('app_delete_reclamation', {'reclamateur_id': reclamation.getReclamateur().id,'id': reclamation.id}) }}" class="btn btn-danger btn-sm">Delete</a>
															{% endif %}
														</td>
														<td>
															{% if reclamation.getReponse() is not null %}
																<a href="{{ path('app_reponse_show', {'id': reclamation.getReponse().id,'reclamateur_id': reclamation.getReclamateur().id}) }}" class="btn btn-info btn-sm">Show Response</a>
															{% endif %}
														</td>
													</div>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
							<a href="{{ path('app_reclamation', {'reclamateur_id': reclamateur_id}) }}" class="btn btn-secondary">Back to Reclamation Form</a>

							<!-- End Contact Form -->
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
	<!-- End Contact Form -->

 
    
      


{% endblock %}

