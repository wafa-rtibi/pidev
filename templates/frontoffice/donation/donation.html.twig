{% extends 'base_front.html.twig' %}

{% block body %}
    <!-- Start Hero Section -->
    <div class="hero">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="intro-excerpt">
                        <h1>Donation</h1>
                        <p class="mb-4">
Les dons sont des gestes altruistes qui jouent un r√¥le essentiel dans le soutien aux causes et aux organisations caritatives.</p>
                        <p><a href="" class="btn btn-secondary me-2">Shop Now</a><a href="#" class="btn btn-white-outline">Explore</a></p>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="hero-img-wrap">
                        <img src="images/couch.png" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Hero Section -->

    <!-- Start Donation Section -->
    <div class="why-choose-section">
        <div class="container">
            <div class="row my-5">
                {% for donation in donations %}
                    <div class="col-6 col-md-6 col-lg-3 mb-4">
                        <div class="feature">
                            <h3>{{ donation }}</h3>
                            <!-- Add more details if needed, e.g., donation date, donateur, montant, etc. -->
                            <p>Date: {{ donation.date|date('Y-m-d') }}</p>
                            <p>Donateur: {{ donation.donateur.nom }}</p>
                            <p>Montant: {{ donation.montant }}</p>
                            <p>Organisation: {{ donation.organisation.nomOrganisation }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- End Donation Section -->

    <!-- Other sections if needed -->

{% endblock %}
