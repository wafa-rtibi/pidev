{% extends "base_front.html.twig" %}

{% block body %}
	<main class="content">
		<div class="container p-0">

			<h1 class="h3 mb-3">
				<strong>Messages</strong>
			</h1>

			<div class="card">
				<div class="row g-0">
					<div class="col-12 col-lg-5 col-xl-3 border-right">

						{# <div class="px-4 d-none d-md-block">
							<div class="d-flex align-items-center">
								<div class="flex-grow-1">
									<input type="text" class="form-control my-3" placeholder="Search...">
								</div>
							</div>
						</div> #}

						{% if utilisateur is defined and utilisateurs is not defined %}
							<a href="{{path('app_message_show',{'id_user': utilisateur.getId()})}}" class="list-group-item list-group-item-action border-0">
								{# <div class="badge bg-success float-right">5</div> #}
								<div class="d-flex align-items-start">
									<img src="{{ utilisateur.getPhotoProfil() }}" class="rounded-circle mr-1" alt="Vanessa Tucker" width="40" height="40">
									<div class="flex-grow-1 ml-3">
										{{utilisateur.getNom()}}
									</div>
								</div>
							</a>
						{% endif %}
						
                        {% if utilisateurs is defined %}
							{% for user in utilisateurs %}
							<a href="{{path('app_message_show',{'id_user': user.getId()})}}" class="list-group-item list-group-item-action border-0">
								{# <div class="badge bg-success float-right">5</div> #}
								<div class="d-flex align-items-start">
									<img src="{{ user.getPhotoProfil() }}" class="rounded-circle mr-1" alt="Vanessa Tucker" width="40" height="40">
									<div class="flex-grow-1 ml-3">
										{{user.getNom()}}
									</div>
								</div>
							</a>
							<hr class="d-block d-lg-none mt-1 mb-0">
						{% endfor %}		
					</div>
                    {% endif %}
                  
					{% if utilisateur is defined  %}
					
					<div class="col-12 col-lg-7 col-xl-9">
                        
						<div class="py-2 px-4 border-bottom d-none d-lg-block">
							<div class="d-flex align-items-center py-1">
							 
						 
								<div class="position-relative">
									<img src="{{ utilisateur.getPhotoProfil() }}" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
								</div>
								<div class="flex-grow-1 pl-3">
									<strong>{{utilisateur.getNom()}}</strong>
								
								</div>
								<div>
									<button class="btn btn-light border btn-lg px-3">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal feather-lg">
											<circle cx="12" cy="12" r="1"></circle>
											<circle cx="19" cy="12" r="1"></circle>
											<circle cx="5" cy="12" r="1"></circle>
										</svg>
									</button>
								</div>
							</div>
						</div>

						<div class="position-relative">
							<div class="chat-messages p-4">
							{% if conversation is defined %}
							
                                {% if conversation is not empty %}
                                    {% for msg in conversation %}
											{% if msg.getSender()== me %}
													<div class="chat-message-right pb-4">
														<div>
															<img src="{{me.getPhotoProfil()}}" class="rounded-circle mr-1"   alt="Chris Wood" width="40" height="40">
															<div class="text-muted small text-nowrap mt-2">{{ msg.getCreatedAt()|date('Y-m-d')  }}</div>
														</div>
														<div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
															<div class="font-weight-bold mb-1">You</div>
															   {{msg.getMessage()}}
														</div>
													</div>
											{% endif %}
										{% if msg.getSender()== utilisateur %}
											<div class="chat-message-left pb-4">
												<div>
													<img src="{{ utilisateur.getPhotoProfil() }}" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
													<div class="text-muted small text-nowrap mt-2">{{msg.getCreatedAt()|date('Y-m-d')}}</div>
												</div>
												<div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
													<div class="font-weight-bold mb-1">{{utilisateur.getNom()}}</div>
													 {{msg.getMessage()}}
													
												</div>
											</div>
										{% endif %}
                                   {% endfor %}
                                {% endif %}
							{% endif %}
							</div>
						</div>

						<div class="flex-grow-0 py-3 px-4 border-top">
						    <form method="GET" action="{{path('app_message_send',{'id_user': utilisateur.getId()})}}" >
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Type your message" name="message">
									<button type="submit" class="btn btn-primary">Send</button>
								</div>
							</form>
						</div>
                      
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</main>
	<style>
		main {
			margin-top: 20px;
			margin-bottom: 300px;
		}

		.chat-online {
			color: #34ce57
		}

		.chat-offline {
			color: #e4606d
		}

		.chat-messages {
			display: flex;
			flex-direction: column;
			max-height: 800px;
			overflow-y: scroll
		}

		.chat-message-left,
		.chat-message-right {
			display: flex;
			flex-shrink: 0
		}

		.chat-message-left {
			margin-right: auto
		}

		.chat-message-right {
			flex-direction: row-reverse;
			margin-left: auto
		}
		.py-3 {
			padding-top: 1rem !important;
			padding-bottom: 1rem !important;
		}
		.px-4 {
			padding-right: 1.5rem !important;
			padding-left: 1.5rem !important;
		}
		.flex-grow-0 {
			flex-grow: 0 !important;
		}
		.border-top {
			border-top: 1px solid #dee2e6 !important;
		}
	</style>
	
{% endblock %}
