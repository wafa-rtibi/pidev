{% extends 'base_front.html.twig' %}
{% block body %}
<div style="margin-left: 90px;">
<br><br><h1>Edit your Blog Post</h1><br>
{{ form(form) }}

<br><br><br><br><br><br><br><br>





































<style>

h1 {
    text-align: center;
}

.form-group {
    margin-bottom: 20px;
    margin-left: 20px;
}

label {
    display: block;
    font-weight: bold;
}

input[type="text"],
textarea {
    margin-bottom: 20px;
    width: 50%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

button[type="submit"] {
    margin-top: 20px;

    display: block;
    width: 20%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

