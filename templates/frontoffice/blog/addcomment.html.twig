{{ form_start(formadd, {'attr': {'class': 'my-4'}}) }}
    <div class="form-group mb-4">
        {{ form_label(formadd.contenu, 'Message', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(formadd.contenu, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': 'Enter your message'}}) }}
